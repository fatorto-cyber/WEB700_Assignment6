<div class="container">
    <h2 class="my-4">Courses</h2>

    <!-- Show message if no results -->
    <% if (typeof message !== "undefined" && message) { %>
        <div class="alert alert-warning" role="alert">
            <%= message %>
        </div>
    <% } %>

    <% if (courses && courses.length > 0) { %>
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Course ID</th>
                        <th>Course Code</th>
                        <th>Course Description</th>
                        <th></th> <!-- For the "Remove" button column -->
                    </tr>
                </thead>
                <tbody>
                    <% courses.forEach(course => { %>
                        <tr>
                            <td>
                                <a href="/course/<%= course.courseId %>">
                                    <%= course.courseId %>
                                </a>
                            </td>
                            <td>
                                <a href="/course/<%= course.courseId %>">
                                    <%= course.courseCode %>
                                </a>
                            </td>
                            <td>
                                <a href="/students?course=<%= course.courseId %>">
                                    <%= course.courseDescription %>
                                </a>
                            </td>
                            <td>
                                <!-- Remove button with a link to delete the course -->
                                <a href="/course/delete/<%= course.courseId %>" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this course?')">Remove</a>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    <% } else { %>
        <p>No courses found.</p>
    <% } %>

    <!-- Link to Add New Course -->
    <a href="/courses/add" class="btn btn-success">Add New Course</a>

    <hr />
    <!-- Link to go back to Home page -->
    <a href="/" class="btn btn-primary">Back to Home</a>
</div>
